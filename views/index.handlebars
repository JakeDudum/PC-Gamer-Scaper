<img id="logo" src="./images/logo.png">
<h1 id="title" class="text-light clearfix">Web Scraper</h1>
<div class="row no-gutters justify-content-around mb-4">
    <div class="col-5 col-md-3 text-center">
        <button id="scrape" class="btn btn-lg btn-danger">Scrape Articles</button>
    </div>
    <div class="col-5 col-md-3 text-center">
        <a href="/articles"><button class="btn btn-lg btn-danger">Article API</button></a>
    </div>
</div>
<div id="row no-gutters">
    {{#each articles}}
    <div class="card col-11 col-md-5 bg-dark mr-5">
        <img class="news-image card-img-top" src="{{image}}">
        <div class="card-body">
            <h5 class="card-title text-light">{{title}}</h5>
            <p class="card-text text-light">{{summary}}</p>
            <a class="btn btn-danger" href="{{link}}">Read More</a>
            <button class="btn btn-danger pb-1">Notes</button>
        </div>
    </div>
    {{/each}}
</div>